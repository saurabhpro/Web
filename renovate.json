{
  "extends": ["config:base"],
  "groupName": "Renovate Dependency Scan",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": true
  },
  "separateMultipleMajor": true,
  "masterIssue": true,
  "packageRules": [
    {
      "matchDepTypes": ["*"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "Dependencies (non-major)",
      "automerge": true,
      "groupSlug": "renovate-dependencies"
    },
    {
      "updateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"],
      "automerge": false
    }
  ],
  "ignorePaths": ["**/Angular/**"],
  "ignoreDeps": []
}
